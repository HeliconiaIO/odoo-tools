<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="email_birthday_wishes_employee_template" model="mail.template">
            <field name="name">Employee Birthday Wishes Template</field>
            <field name="subject">Happy Birthday ${object.name}</field>
            <field name="email_from">${user.email|safe}</field>
            <field name="email_to">${object.work_email|safe}</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.name},</p>
                <br/>
                <p>Date: ${object.birthday}</p>
                <br/>
                <p>Happy Birthday..!</p>
                <br/>
                <p>Wish You a very very Happy Birthday, ${object.name}.</p>
                <p>Hope you have a great Year Ahead. Stay Healthy, Stay Happy.</p>
                <br/>
                <p style="font-size: 12px;">
                    </br>
                    Wishes From : <strong>${user.company_id.name}</strong>
                </p>
                ]]>
            </field>
        </record>


        <record id="email_birthday_reminder_template" model="mail.template">
            <field name="name">Employee Birthday Reminder Template</field>
            <field name="subject">Upcoming Birthday Notification </field>
            <field name="partner_to">${object.partner_id.id|safe}</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Hello Manager,</p>
                <br/>
                <p>This is a notification of upcoming birthday of employee</p>
                <table border="1">
                    <tr>
                        <td>Employee Name</td>
                        <td>Birth-date</td>
                    </tr>
                    % for employee in object.get_employees():
                        <tr>
                            <td>${employee.name}</td>
                            <td>${employee.birthday}</td>
                        </tr>
                    % endfor
                </table>

                <br/>
                <br/>
                <p>Thank You</p>
                ]]>
            </field>
        </record>


    </data>
</odoo>
